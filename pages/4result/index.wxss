/* 容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: left;
  padding: 20rpx;
  width: 100%;
}

/* 标题样式 */
.header {
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

/* 图片样式 */
.image-container {
  width: 100%;
  margin-bottom: 20rpx;
}

.food-image {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
}

/* 内容样式 */
.content {
  width: 100%;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.section-content {
  font-size: 32rpx;
  line-height: 36rpx;
  text-align: left;
  padding: 10rpx 0;
}
