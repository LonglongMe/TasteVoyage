.movable-area {  
  justify-content: center;
  align-items: center; 
  width: 1110rpx;  
  height: 100rpx;
  position: absolute; 
  left: -330rpx;
  border-radius: 50rpx;

  overflow:hidden ;
  
}  
  
.movable-view { 
  border-radius: 20rpx; 
  position: relative;
  display: flex; 
  left: 330rpx; 
  width: 780rpx;
  height: 100rpx; 

}  
  
.block {  

  justify-content: center;
  position: relative;
  display: flex; 
  border-radius: 50rpx;
  left: 330rpx; 
  width: 120rpx; /* 方块宽度 */  
  height: 100rpx;
  backdrop-filter: blur(25px);
  color: rgb(201, 198, 198);  
  box-shadow: 0px 0px 20px 10px rgba(0, 0, 0, 0.05);
}

